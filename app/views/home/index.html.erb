<script>
	var map;
	function initMap() {
		map = new google.maps.Map(document.getElementById('map'), {
			center: {lat: 32.73, lng: -117.19},
			zoom: 11
		});
	}
</script>

<script>
	var markers = [];
	var interval = 10000;
	var image = 'https://cdn4.iconfinder.com/data/icons/48x48-free-object-icons/48/Airplane.png';

	$(document).on("ready page:load", function () {
		ajaxCall();
		//setInterval(function() {ajaxCall();}, interval);
	});

	$('#refresh').click(function() {
		ajaxCall();
	});

	function ajaxCall() {
		for(i = 0; i<markers.length; i++) {
			markers[i].setMap(null);
		}
		markers = [];
		$.ajax({
			//url: "http://api.metro.net/agencies/lametro/routes/" + num + "/vehicles/",
			url: "https://api.flightstats.com/flex/flightstatus/rest/v2/json/flightsNear/32.73/-117.19/50?appId=ee3397e9&appKey=fb56756943c52b106500a766ecb430ed&maxFlights=10",
			//url: "<%= airplanes_path %>",
			success: function(res){
				for (i = 0; i < res.flightPositions.length; i++) {
					var marker = new google.maps.Marker({
						position: {lat: res.flightPositions[i].positions[res.flightPositions[i].positions.length-1].lat,
											 lng: res.flightPositions[i].positions[res.flightPositions[i].positions.length-1].lon},
						map: map,
						icon: image,
						id: res.flightPositions[i].flightId
					});
					markers.push(marker);
				}
			},
			error: function (xhr, ajaxOptions, thrownError) {
				alert(thrownError);
			}
		});
	}
</script>

<script async defer
				src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBTtLxO68T3Enh5wodnVIy0CcnhVH3fWys
